#!/usr/bin/env bash
#
# Created by Dylan Araps.

scr_dir=~/Pictures/Screenshots

printf -v date '%(%F)T'
printf -v time '%(%I-%M-%S)T'

mkdir -p "${scr_dir}/${date}"
scr=${scr_dir}/${date}/${date}-${time}

import -window root "$scr".png &
import -window root "$scr".jpg &

printf '%s\n' "$scr.jpg" > ~/.cache/scrot
