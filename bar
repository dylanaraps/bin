#!/usr/bin/env bash
# shellcheck disable=SC1090
#
# bar - Dylan Araps
. ~/.cache/wal/colors.sh
unset PATH

# Enable builtin sleep.
enable -f /usr/lib64/bash/sleep sleep


wif() {
    # Read wifi information from file populated by netctl hook.
    cur="$(< /tmp/ssid)"
    wif="$cur %{F${color3}}\\uf1eb%{F}"
}


son() {
    # Read song information from file populated by cmus.
    cur="$(< ~/.cache/song)"
    son="%{F${color6}}\\uf001%{F}  ${cur:-Not Playing}"
}


tim() {
    # Get the current date/time using printf format string.
    printf -v tim "%(%a %d %b  - %l:%M %p)T" "-1"
}


bri() {
    # Read brightness from file.
    cur="$(< /sys/class/backlight/intel_backlight/brightness)"
    bri="$((cur / 10 + 7))% %{F${color1}}\\uf0eb%{F}"
}


bat() {
    # Read battery status from file.
    cur="$(< /sys/class/power_supply/BAT1/capacity)"
    sta="$(< /sys/class/power_supply/BAT1/status)"

    case "$cur" in
        [0-9])  bat_icon="\\uf244" ;;
        [1-3]?) bat_icon="\\uf243" ;;
        [4-5]?) bat_icon="\\uf242" ;;
        [6-7]?) bat_icon="\\uf241" ;;
        *)      bat_icon="\\uf240" ;;
    esac

    [[ "$sta" == Charging ]] && \
        bat_icon+="%{F${color5}}  \\uf0e7%{F}"

    bat="${cur}%  %{F${color4}}$bat_icon%{F}"
}


vol() {
    # Read volume information from file populated by volume hotkeys.
    cur="$(< ~/.cache/vol)"

    case "$cur" in
        [0-9]%*|*f*) vol_icon="\\uf026" ;;
        [1-4]?%*)    vol_icon="\\uf027" ;;
        [5-6]?%*|*)  vol_icon="\\uf028" ;;
    esac

    vol="${cur/ *} %{F${color2}}$vol_icon%{F}"
}


for((;;)) {
    son
    tim
    bri
    vol
    wif
    bat

    printf "    %b    \\n" \
           "$son%{c}$tim%{r}$bri   $vol   $wif   $bat"

    builtin sleep 2
} |\

/bin/lemonbar -db \
         -g 1800x100+700+75 \
         -f "Roboto Mono 22" \
         -f "Font Awesome-15" \
         -o 0 \
         -o -1 \
         -n "bar" \
         -B "${1:-#FFFFFF}" \
         -F "${2:-#000000}"
