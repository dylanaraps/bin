#!/bin/bash

read -rd '' sequences <<'EOF'
]4;0;#1a1f17\]4;1;#aa7758\]4;2;#82a969\]4;3;#90a981\]4;4;#7baa7c\]4;5;#9aa89c\]4;6;#80aa90\]4;7;#c5c7c5\]4;8;#535751\]4;9;#aa7758\]4;10;#82a969\]4;11;#90a981\]4;12;#7baa7c\]4;13;#9aa89c\]4;14;#80aa90\]4;15;#c5c7c5\]10;#c5c7c5\]11;#1a1f17\]12;#c5c7c5\]13;#c5c7c5\]17;#c5c7c5\]19;#1a1f17\[s[1000H[8m]708;#1a1f17\[u]13;#c5c7c5\\
EOF

for term in /dev/pts/[0-9]*; do
    [[ -w "$term" ]] && printf "%b" "$sequences" > "$term" &
done
